<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CasdastroFragment">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_marginTop="20px"/>

    <EditText
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="120px"
        ></EditText>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/descricao"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_marginTop="400px"/>

    <EditText
        android:gravity="top"
        android:id="@+id/view2"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:layout_marginTop="520px"
        ></EditText>

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/data"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_marginTop="900px"/>

    <Button
        android:id="@+id/botaoData"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="1050px"
        android:layout_marginLeft="300px"
        android:text="Selecionar"></Button>

    <Button
        android:id="@+id/botaoSalvar"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginTop="1250px"
        android:layout_marginLeft="400px"
        android:text="Salvar"></Button>



</FrameLayout>
</ScrollView>